generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

model User {
  id    String @id @default(uuid())
  googleId String @unique
  gender String?
  role   String?
  age    String?
  job    String?
  bots   Bot[]
  groups Group[]
}

model Bot {
  id      String @id @default(uuid())
  type    String
  userId  String
  user    User   @relation(fields: [userId], references: [id])
  group   Group?
}

model Log {
  id        String   @id @default(uuid())
  message   String
  response  String
  createdAt DateTime @default(now())
  groupId   String?
  group     Group? @relation(fields: [groupId], references: [id])
}

model Group {
  id     String @id @default(uuid())
  name   String
  userId String
  user   User @relation(fields: [userId], references: [id])
  botId  String   @unique
  bot    Bot     @relation(fields: [botId], references: [id])
  logs   Log[]
}

model Contact{
  id String @id @default(uuid())
  name String
  email String
  category String
  message String
  createdAt DateTime @default(now())
}